{
  "name": "@spudly/scripts",
  "version": "1.0.0",
  "description": "An opinionated npm package configurator",
  "license": "ISC",
  "author": "",
  "files": [
    "bin",
    "build",
    "template"
  ],
  "main": "build/index.js",
  "bin": {
    "spudly-scripts": "bin/scripts.js",
    "spudly-scripts-dev": "bin/scripts-dev.js"
  },
  "scripts": {
    "build": "bin/scripts-dev.js build",
    "lint": "bin/scripts-dev.js lint",
    "prepare": "npm run build",
    "test": "bin/scripts-dev.js test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "bin/scripts-dev.js pre-commit",
      "commit-msg": "bin/scripts-dev.js commit-msg"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "eslintIgnore": [
    "node_modules",
    "build"
  ],
  "dependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/lint": "^8.3.4",
    "@commitlint/load": "^8.3.4",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^8.0.0",
    "@spudly/eslint-config": "^6.0.0",
    "chalk": "^3.0.0",
    "ejs": "^3.0.1",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "semantic-release": "^16.0.1",
    "sort-package-json": "^1.38.3",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/tmp": "^0.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.0.6",
    "tmp": "^0.1.0",
    "ts-node": "^8.6.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
