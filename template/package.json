{
  "name": "<%= name %>",
  "version": "0.0.0",
  "files": [
    "bin",
    "build"
  ],
  "scripts": {
    "build": "spudly-scripts build",
    "lint": "spudly-scripts lint",
    "prepare": "npm run build",
    "test": "spudly-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "spudly-scripts pre-commit"
      ],
      "commit-msg": [
        "spudly-scripts commit-msg"
      ]
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "lf",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "eslintIgnore": [
    "node_modules",
    "build"
  ],
  "publishConfig": {
    "access": "public"
  }
}
